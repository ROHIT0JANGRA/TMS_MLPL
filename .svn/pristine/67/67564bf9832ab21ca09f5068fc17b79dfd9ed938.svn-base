@model IEnumerable<CodeLock.Models.MasterTyrePosition>

    @{
        ViewBag.Title = "TyrePosition List";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <div class="widget-wrap material-table-widget">
        <table id="dtTyrePosition">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TyrePositionid)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VehicleTypeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PositionCategoryName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PositionShortCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TyrePositionDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    <th class="td-center" data-sort-ignore="true" data-hide="phone">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TyrePositionid)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VehicleTypeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PositionCategoryName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PositionShortCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TyrePositionDescription)
                        </td>
                        <td>
                            @Html.Label("", item.IsActive == true ? "Yes" : "No", new { @class = item.IsActive == true ? "label label-success" : "label label-default" })
                        </td>
                        <td class="td-center">
                            <div class="btn-toolbar" role="toolbar">
                                <div class="btn-group" role="group">
                                    <a class="btn btn-default btn-sm m-user-edit" href="@Url.Action("Update", new { id = item.TyrePositionid })"><span class="zmdi zmdi-edit"></span></a>
                                    <a class="btn btn-default btn-sm m-user-edit" href="@Url.Action("View", new { id = item.TyrePositionid })"><span class="fa fa-file"></span></a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script>
    $(document).ready(function () {
        SetPageLoad('TyrePosition', 'List', 'filter', 'Add New', '@Url.Action("Insert")');
        LoadDataTable('dtTyrePosition', true, true, true);
    });
    </script>

