@model CodeLock.Models.DispatchRegister
@using Secure_Coding.MvcSecurityExtensions;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="dvWizard">
    <div class="panel-body">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "j-forms", @id = "j-forms" }))
        {
            @Html.AntiForgeryToken()
            <div class="tab-content">
                <div class="tab-pane">
                    <div class="row">
                        <div class="col-sm-4">
                            @Html.Label("Dispatch Date", new { @class = "label" })
                            <div id="drDispatchDate"></div>
                        </div>
                    </div>
                    <div class="page-separator">OR</div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.DispatchNo, new { @class = "label" })
                                <div class="input">
                                    @Html.TextBoxFor(model => model.DispatchNo, new { @class = "form-control", @id = "txtDispatchNo" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane">
                    <div class="row">
                        <div class="col-sm-12">
                            <div>
                                <table id="dtDispatchDetail"></table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    $(document).ready(function () {
        SetPageLoad('Dispatch', 'Register', '');
        drDispatchDate = InitDateRange('drDispatchDate', DateRange.LastWeek);
        txtDispatchNo = $('#txtDispatchNo');
        InitWizard('dvWizard', [
       { StepName: 'Criteria', StepFunction: GetDispatchList },
       { StepName: 'Document List' }
        ], '');

        dtDispatchDetail = LoadDataTable('dtDispatchDetail', true, true, true, null, null, [],
                [
                    { title: 'Dispatch No', data: "DispatchNo" },
                    { title: 'Dispatch Date Time', data: "DispatchDateTime" },
                    { title: 'Order No', data: "OrderNo" }
                ]);
    });

    function GetDispatchList() {
        var requestData = { DispatchNo: txtDispatchNo.val(), fromDate: drDispatchDate.startDate, toDate: drDispatchDate.endDate };
        AjaxRequestWithPostAndJson('@Url.Action("GetRegisterDispatchDetail")', JSON.stringify(requestData), OnDispatchDetailsSuccess, ErrorFunction, false);
        return false;
    }

    function OnDispatchDetailsSuccess(responseData) {
        dtDispatchDetail.fnClearTable()
        if (responseData.length == 0) {
            isStepValid = false;
            ShowMessage('No Record Found');
            return false;
        }
        else {
            if (responseData.length > 0) {
                $.each(responseData, function (i, item) {
                    item.DispatchDateTime = $.displayDateTime(item.DispatchDateTime);
                });
                dtDispatchDetail.dtAddData(responseData);
            }
        }
    }
</script>