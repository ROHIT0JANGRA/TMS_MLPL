@model IEnumerable<CodeLock.Models.MasterVehicleType>
@{
    ViewBag.Title = "Vehicle Type List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="widget-wrap material-table-widget">
    <table id="dtVehicleType">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.VehicleTypeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModelNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Capacity)
                </th>
                <th data-hide="phone">
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th class="td-center" data-sort-ignore="true" data-hide="phone">Action</th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model.Manufacturer)
                </th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model.VehicleTypeDescription)
                </th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model.FuelTypeId)
                </th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model.GrossVehicleWeight)
                </th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model.UnladenWeight)
                </th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model.Length)
                </th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model.Width)
                </th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model.Width)
                </th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model.Height)
                </th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model.EntryDate)
                </th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model.UpdateByName)
                </th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model.UpdateDate)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.VehicleTypeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModelNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Capacity)
                    </td>
                    <td>
                        @Html.Label("", item.IsActive == true ? "Yes" : "No", new { @class = item.IsActive == true ? "label label-success" : "label label-default" })
                    </td>
                    <td class="td-center">
                        <div class="btn-toolbar" role="toolbar">
                            <div class="btn-group" role="group">
                                <a class="btn btn-default btn-sm m-user-edit" href="@Url.Action("Update", new { id = item.VehicleTypeId })"><span class="zmdi zmdi-edit"></span></a>
                                <a class="btn btn-default btn-sm m-user-edit" href="@Url.Action("View", new { id = item.VehicleTypeId })"><span class="fa fa-file"></span></a>
                            </div>
                        </div>
                    </td>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.Manufacturer)
                    </td>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.VehicleTypeDescription)
                    </td>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.FuelTypeName)
                    </td>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.GrossVehicleWeight)
                    </td>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.UnladenWeight)
                    </td>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.Length)
                    </td>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.Width)
                    </td>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.Height)
                    </td>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.EntryByName)
                    </td>
                    <td style="display:none">
                        @item.EntryDate.ToDisplayDateTime()
                    </td>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.UpdateByName)
                    </td>
                    <td style="display:none">
                        @item.UpdateDate.ToDisplayDateTime()
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        SetPageLoad('VehicleType', 'List', 'filter', 'Add New', '@Url.Action("Insert")');
        LoadDataTable('dtVehicleType', true, true, true);
    });
</script>