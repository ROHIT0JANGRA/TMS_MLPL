@model CodeLock.Models.Asn
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="widget-wrap">
    <div class="row">
        @*<div class="col-xs-3">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.EntryDate)
                    </dt>
                    <dd>
                        @Model.EntryDate.ToDisplayDateTime()
                    </dd>
                </dl>
            </div>*@
        <div class="col-xs-3">
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.AsnDateTime)
                </dt>
                <dd>
                    @Model.AsnDateTime.ToDisplayDateTime()
                </dd>
            </dl>
        </div>
        <div class="col-xs-3">
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.SupplierCode)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.SupplierCode)


                </dd>
            </dl>
        </div>
        <div class="col-xs-3">
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.PoNo)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.PoNo)
                </dd>
            </dl>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-3">
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.PoDate)
                </dt>
                <dd>
                    @Model.PoDate.ToDisplayDate()
                </dd>
            </dl>
        </div>
        <div class="col-xs-3">
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.InvoiceNo)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.InvoiceNo)
                </dd>
            </dl>
        </div>
        <div class="col-xs-3">
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.InvoiceDate)
                </dt>
                <dd>
                    @Model.InvoiceDate.ToDisplayDate()
                </dd>
            </dl>
        </div>
        <div class="col-xs-3">
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.EntryByName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.EntryByName)
                </dd>
            </dl>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-3">
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.EntryDate)
                </dt>
                <dd>
                    @Model.EntryDate.ToDisplayDateTime()
                </dd>
            </dl>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="widget-container">
                <div class="widget-content">
                    <table id="dtAsnDetail" class="table-bordered">
                        <thead>
                            <tr>
                                <th>Sku Code</th>
                                <th>Sku Name</th>
                                <th>UOM</th>
                                <th>Box</th>
                                <th>Batch Number</th>
                                <th>Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Details.Count; i++)
                            {
                                var item = Model.Details.ToArray()[i];
                                <tr>
                                    <td>
                                        @Html.DisplayFor(model => item.SkuCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => item.SkuDescription)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => item.Uom)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => item.Box)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => item.BatchNumber)
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(model => item.Quantity, new { @Class = "textlabel form-control", @style = "text-align: right" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        SetPageLoad('ASN', 'View Detail', '', 'Add New', '@Url.Action("Insert", new { id = Model.AsnId })');
    });
</script>