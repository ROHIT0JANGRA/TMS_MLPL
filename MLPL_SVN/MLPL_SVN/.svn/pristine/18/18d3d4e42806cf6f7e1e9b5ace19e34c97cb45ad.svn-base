@model CodeLock.Models.MasterVehicleType
@using Secure_Coding.MvcSecurityExtensions;
@{
    ViewBag.Title = "Vehicle Type Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Insert", "VehicleType", FormMethod.Post, new { @class = "j-forms" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("VehicleTypeId", 0);
    @Html.AntiModelInjectionFor(m => m.VehicleTypeId)

    <div class="widget-wrap">
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.Manufacturer, new { @class = "label" })
                    <div class="input">
                        @Html.TextBoxFor(model => model.Manufacturer, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.Manufacturer)
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.VehicleTypeName, new { @class = "label" })
                    <div class="input">
                        @Html.TextBoxFor(model => model.VehicleTypeName, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.VehicleTypeName)
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.ModelNo, new { @class = "label" })
                    <div class="input">
                        @Html.TextBoxFor(model => model.ModelNo, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.ModelNo)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.VehicleTypeDescription, new { @class = "label" })
                    <div class="input">
                        @Html.TextBoxFor(model => model.VehicleTypeDescription, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.VehicleTypeDescription)
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.FuelTypeId, new { @class = "label" })
                    <div class="select">
                        @Html.DropDownListFor(model => model.FuelTypeId, new SelectList(ViewBag.FuelTypeList, "Value", "Name"), "Select Fuel Type", new { @class = "form-control", @id = "ddlFuelType" })
                        <i></i>
                    </div>
                    @Html.ValidationMessageFor(model => model.FuelTypeId)

                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.IsActive, new { @class = "label" })
                    <label class="checkbox">
                        @Html.CheckBoxFor(model => model.IsActive)
                        <i></i>
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.GrossVehicleWeight, new { @class = "label" })
                    <div class="input">
                        @Html.TextBoxFor(model => model.GrossVehicleWeight, new { @class = "form-control numeric2", @id = "txtGrossWeight" })
                    </div>
                    @Html.ValidationMessageFor(model => model.GrossVehicleWeight)
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.UnladenWeight, new { @class = "label" })
                    <div class="input">
                        @Html.TextBoxFor(model => model.UnladenWeight, new { @class = "form-control numeric2", @id = "txtUnladenWeight" })
                    </div>
                    @Html.ValidationMessageFor(model => model.UnladenWeight)
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.Capacity, new { @class = "label" })
                    <div>
                        @Html.Label("Capacity", "0", new { @class = "numeric2", @id = "lblCapacity" })
                        @Html.HiddenFor(model => model.Capacity, new { @id = "hdnGrossWeight" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.Length, new { @class = "label" })
                    <div class="input">
                        @Html.TextBoxFor(model => model.Length, new { @class = "form-control numeric2" })
                    </div>
                    @Html.ValidationMessageFor(model => model.Length)
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.Width, new { @class = "label" })
                    <div class="input">
                        @Html.TextBoxFor(model => model.Width, new { @class = "form-control numeric2" })
                    </div>
                    @Html.ValidationMessageFor(model => model.Width)
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.Height, new { @class = "label" })
                    <div class="input">
                        @Html.TextBoxFor(model => model.Height, new { @class = "form-control numeric2" })
                    </div>
                    @Html.ValidationMessageFor(model => model.Height)
                </div>
            </div>
        </div>
        <div class="form-footer">
            <button type="submit" class="btn btn-success primary-btn" tabindex="3">Create</button>
        </div>
    </div>
}
<script>
    $(document).ready(function () {
        SetPageLoad('Vehicle Type', 'Insert', 'Manufacturer', 'Go To List', '@Url.Action("Index")');
        $('#txtGrossWeight').blur(CalculateCapacity);
        $('#txtUnladenWeight').blur(CalculateCapacity);
    });

    function CalculateCapacity() {
        var grossWeight = parseFloat($("#txtGrossWeight").val());
        var unladenWeight = parseFloat($("#txtUnladenWeight").val());
        if (unladenWeight > grossWeight)
            unladenWeight = 0;
        $("#txtGrossWeight").val(grossWeight.toFixed(2));
        $("#txtUnladenWeight").val(unladenWeight.toFixed(2));
        $("#lblCapacity").html((grossWeight - unladenWeight).toFixed(2));
    }
</script>

