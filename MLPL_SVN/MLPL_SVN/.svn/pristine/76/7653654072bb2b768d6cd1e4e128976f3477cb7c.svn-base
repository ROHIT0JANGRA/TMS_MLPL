@model CodeLock.Models.AsnRegister
@using Secure_Coding.MvcSecurityExtensions;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="dvWizard">
    <div class="panel-body">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "j-forms", @id = "j-forms" }))
        {
            @Html.AntiForgeryToken()
            <div class="tab-content">
                <div class="tab-pane">
                    <div class="row">
                        <div class="col-sm-4">
                            @Html.Label("ASN Date", new { @class = "label" })
                            <div id="drASNDate"></div>
                        </div>
                    </div>
                    <div class="page-separator">OR</div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.AsnNo, new { @class = "label" })
                                <div class="input">
                                    @Html.TextBoxFor(model => model.AsnNo, new { @class = "form-control", @id = "txtAsnNo" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane">
                    <div class="row">
                        <div class="col-sm-12">
                            <div>
                                <table id="dtAsnDetail"></table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    $(document).ready(function () {
        SetPageLoad('ASN', 'Register', '');
        drASNDate = InitDateRange('drASNDate', DateRange.LastWeek);
        txtAsnNo = $('#txtAsnNo');
        InitWizard('dvWizard', [
       { StepName: 'Criteria', StepFunction: GetAsnList },
       { StepName: 'Document List' }
        ], '');

        dtAsnDetail = LoadDataTable('dtAsnDetail', true, true, true, null, null, [],
                [
                    { title: 'ASN No', data: "AsnNo" },
                    { title: 'ASN Date Time', data: "AsnDateTime" },
                    { title: 'Supplier', data: "SupplierCode" },
                    { title: 'PO No', data: "PoNo" },
                    { title: 'PO Date', data: "PoDate" },
                    { title: 'Invoice No', data: "InvoiceNo" },
                    { title: 'Invoice Date', data: "InvoiceDate" }
                ]);
    });

    function GetAsnList() {
        var requestData = { asnNo: txtAsnNo.val(), fromDate: drASNDate.startDate, toDate: drASNDate.endDate };
        AjaxRequestWithPostAndJson('@Url.Action("GetRegisterAsnDetail")', JSON.stringify(requestData), OnAsnDetailsSuccess, ErrorFunction, false);
        return false;
    }

    function OnAsnDetailsSuccess(responseData) {
        dtAsnDetail.fnClearTable()
        if (responseData.length == 0) {
            isStepValid = false;
            ShowMessage('No Record Found');
            return false;
        }
        else {
            if (responseData.length > 0) {
                $.each(responseData, function (i, item) {
                    item.AsnDateTime = $.displayDateTime(item.AsnDateTime);
                    item.PoDate = $.displayDate(item.PoDate);
                    item.InvoiceDate = $.displayDate(item.InvoiceDate);
                });
                dtAsnDetail.dtAddData(responseData);
            }
        }
    }
</script>

