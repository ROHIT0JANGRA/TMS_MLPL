@using CodeLock.Models
@model Repacking
@{
    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
        companyId = '@SessionUtility.CompanyId';
        warehouseId = '@SessionUtility.WarehouseId';
        RepackingUrl = '@Url.Action("", "Repacking", new { Area = "WMS" })';
</script>
<script src="@Url.Content("~/Areas/WMS/Views/Repacking/Insert.js")"></script>

<div  id="dvWizard">
    <div class="panel-body">
       @using (Html.BeginForm("Insert", "Repacking", FormMethod.Post, new { @class = "j-forms", @id = "j-forms" }))
        {
            @Html.AntiForgeryToken()
            <div class="tab-content">
                <div class="tab-pane">
                    <div class="row">
                        <div class="col-sm-4">
                            @Html.Label("GRN Date", new { @class = "label" })
                            <div class="clearfix">
                                <div id="drGrnDate"></div>
                            </div>
                        </div>
                    </div>
                    <div class="page-separator">OR</div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.Label("GRNNos", "GRN Nos", new { @class = "label" })
                                    <div class="input">
                                        @Html.TextBox("GRNNos", string.Empty, new { @class = "form-control", @id = "txtGrnNos" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="page-separator">OR</div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.Label("RepackingNos", "Repacking Nos", new { @class = "label" })
                                    <div class="input">
                                        @Html.TextBox("RepackingNos", string.Empty, new { @class = "form-control", @id = "txtRepackingNos" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane">
                    <div class="col-sm-4">
                        <div class="form-group">
                            @Html.Partial("DateTimePicker", new DateTimePicker() { FieldName = "RepackingDateTime", FieldCaption = DataAnnotationHelper.GetDisplayName(Model, m => m.RepackingDateTime), IsDateOnly = false, IsRequired = true, AllowFutureDate = false, AllowPastDate = false, MinDate = DateTime.Now.Date, MaxDate = DateTime.Now.Date.AddDays(1) })
                        </div>
                    </div>
                    <div class="row">
                        <table id="dtRepackingList">
                            <thead>
                                <tr>
                                    <th style="min-width: 40px"></th>
                                    <th style="min-width: 180px"></th>
                                    <th style="min-width: 180px"></th>
                                    <th style="min-width: 100px"></th>
                                    <th style="min-width: 100px"></th>
                                    <th style="min-width: 100px"></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


