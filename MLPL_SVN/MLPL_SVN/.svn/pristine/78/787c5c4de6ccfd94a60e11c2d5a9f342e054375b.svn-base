@model CodeLock.Models.MasterCountry
@using Secure_Coding.MvcSecurityExtensions;
@{
    ViewBag.Title = "Country Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Update", "Country", FormMethod.Post, new { @class = "j-forms" }))
{
    @Html.AntiForgeryToken()
    @Html.AntiModelInjectionFor(model => model.CountryId)
    @Html.HiddenFor(model => model.CountryId)
    <div class="widget-wrap">


        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.CountryName, new { @class = "label" })
                    <div class="input">
                        @Html.TextBoxFor(model => model.CountryName, new { @class = "form-control", @id = "txtCountryName" })
                    </div>
                    @Html.ValidationMessageFor(model => model.CountryName)

                </div>

            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.IsActive, new { @class = "label" })
                    <label class="checkbox">
                        @Html.CheckBoxFor(model => model.IsActive, new { @Checked = "checked" })
                        <i></i>
                    </label>
                </div>
            </div>
        </div>
        <div class="form-footer">
            <button type="submit" class="btn btn-success primary-btn" tabindex="3">Update</button>
        </div>
    </div>

}
<script>
    $(document).ready(function () {
        SetPageLoad('Country', 'Update', 'txtCountryName', 'Goto List', '@Url.Action("Index")', 'Add New', '@Url.Action("Insert")', 'View Detail', '@Url.Action("View", new { id = Model.CountryId })');
    });
</script>

