    </div>*@
    <div class="page-separator">Mr List</div>
    <div class="row">
        <div class="col-lg-12">
            <table id="dtMrDocketList">
                <thead>
                    <tr>
                        <th>
                            Mr No
                        </th>
                        <th>
                            @SessionUtility.DocketNomenClature
                        </th>
                        <th>
                            View/Print
                        </th>
                    </tr>
                </thead>
                <tbody>
                   @foreach (var item in Model)
                   {
                        <tr>
                            <td>
                                @Html.DisplayFor(model => item.MrNo)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.DocketNo)
                            </td>
                            <td>
                                <button onclick='return PrintReport( @Html.DisplayFor(model => item.MrId), @Html.DisplayFor(model => item.DocketId));' class="btn btn-primary">
                                    <i class="glyphicon glyphicon-print"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    var mrId = 0;
    $(document).ready(function () {
        spnMassage = $('#spnMassage');
        lblDocumentNo = $('#lblDocumentNo');
        lblDocumentNo.html(GetUrlValue()["documentNo"]);
        mrId = GetUrlValue()["documentId"];
        dtMrDocketList = $('#dtMrDocketList');
        OnPageLoad();
    });

    function OnPageLoad() {
        spnMassage.text("Delivery MR Generated Successfully");
        SetPageLoad('Delivery MR', 'Done', '', 'Go To Delivery MR Generation', '@Url.Action("DeliveryMr")');
        LoadDataTable('dtMrDocketList', false, false, false);
    }

    function PrintReport(mrId, docketId) {
        var prmList = [{ Name: "MrId", Value: mrId }, { Name: "DocketId", Value: docketId }];
        var reportInfo = { PrmList: prmList, Name: 'MRGatePassViewPrint', Description: 'Delivery Mr View Print' };
                ShowReport(reportInfo);
    }
</script>


