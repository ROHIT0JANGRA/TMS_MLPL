@model CodeLock.Models.MasterRole
@using Secure_Coding.MvcSecurityExtensions;
@{
    ViewBag.Title = "Role Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Update", "Role", FormMethod.Post, new { @class = "j-forms" }))
{
    @Html.AntiForgeryToken()
    @Html.AntiModelInjectionFor(model => model.RoleId)
    @Html.HiddenFor(model => model.RoleId)

    <div class="widget-wrap">
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.RoleName, new { @class = "label" })
                    <div class="input-wrapper">
                        @Html.TextBoxFor(model => model.RoleName, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.RoleName)
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.IsActive, new { @class = "label" })
                    <label class="checkbox">
                        @Html.CheckBoxFor(model => model.IsActive)
                        <i></i>
                    </label>
                </div>
            </div>
        </div>
        <div class="form-footer">
            <button type="submit" class="btn btn-success primary-btn" tabindex="3">Update</button>
        </div>
    </div>

}
<script>
    $(document).ready(function () {
        SetPageLoad('Role', 'Update', 'RoleName', 'Goto List', '@Url.Action("Index")', 'Add New', '@Url.Action("Insert")', 'View Detail', '@Url.Action("View", new { id = Model.RoleId })');
    });
</script>
