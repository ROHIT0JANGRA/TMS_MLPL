@model CodeLock.Models.SalesRegister
@using CodeLock.Models;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("", "", FormMethod.Post, new { @class = "j-forms" }))
{
    @Html.HiddenFor(model => model.BaseOn, new { @id = "hdnBaseOn" })

    <div class="widget-wrap">
        <div id="dvContainer">
            <div class="row">
                <div class="col-sm-4">
                    @Html.Label("Select Date", new { @class = "label" })
                    <div class="clearfix">
                        <div id="drDate"></div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        @Html.Partial("LocationHierarchy", new LocationHierarchy() { FieldName = "FromLocationId", FieldCaption = "Delivery MR Location" })
                        
                    </div>
                </div>
            </div>

            <div class="page-separator">OR</div>
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.DocketNo, new { @class = "label" })
                        <div class="input">
                            @Html.TextBoxFor(model => model.DocketNo, new { @class = "form-control", @id = "txtDocketNo" })
                        </div>
                        @Html.ValidationMessageFor(model => model.DocketNo)
                    </div>
                </div>
            </div>

            <div class="page-separator">OR</div>
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.DeliveryMRNO, new { @class = "label" })
                        <div class="input">
                            @Html.TextBoxFor(model => model.DeliveryMRNO, new { @class = "form-control", @id = "txtDeliveryMRNO" })
                        </div>
                        @Html.ValidationMessageFor(model => model.DeliveryMRNO)
                    </div>
                </div>
            </div>

            <div class="page-separator">OR</div>
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.BillNo, new { @class = "label" })
                        <div class="input">
                            @Html.TextBoxFor(model => model.BillNo, new { @class = "form-control", @id = "txtBillNo" })
                        </div>
                        @Html.ValidationMessageFor(model => model.BillNo)
                    </div>
                </div>
            </div>
            
        </div>
        <div class="form-footer">
            <button type="submit" id="btnSubmit" class="btn btn-success primary-btn" tabindex="3">Submit</button>
        </div>
    </div>
}

<script>
    var drDate, ddlFromLocationId, btnSubmit;

    $(document).ready(function () {
        SetPageLoad('Delivery MR Register', 'Report', '', '', '');
        drDate = InitDateRange('drDate', DateRange.LastWeek);
        ddlFromLocationId = $('#ddlFromLocationId');
        txtDocketNo = $('#txtDocketNo');
        txtDeliveryMRNO = $('#txtDeliveryMRNO');
        txtBillNo = $('#txtBillNo');
        btnSubmit = $('#btnSubmit');
        btnSubmit.click(ViewReport);

    });

    function ViewReport() {
          try {
            var prmList = [
                { Name: "FromDate", Value: drDate.startDate },
                { Name: "ToDate", Value: drDate.endDate },
                { Name: "IsCumulative", Value: true },
                { Name: "DocketNo", Value: txtDocketNo.val() == '' ? " " : txtDocketNo.val() },
                { Name: "DeliveryMRNO", Value: txtDeliveryMRNO.val() == '' ? " " : txtDeliveryMRNO.val() },
                { Name: "BillNo", Value: txtBillNo.val() == '' ? " " : txtBillNo.val() },
                { Name: "LocationId", Value: ddlFromLocationId.val() }];
            
            var reportInfo = { PrmList: prmList, Name: 'DeliveryMRRegister', Description: 'Delivery MR Register  Report' };
            ShowReport(reportInfo);
        } catch (e) { ShowMessage(e.message) }
        return false;
    }
</script>
