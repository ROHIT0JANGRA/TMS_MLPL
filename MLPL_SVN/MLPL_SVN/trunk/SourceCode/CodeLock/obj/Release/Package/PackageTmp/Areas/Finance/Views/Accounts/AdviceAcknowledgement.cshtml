@using CodeLock.Models
@model AdviceAcknowledgement
@using Secure_Coding.MvcSecurityExtensions;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        accountsUrl = '@Url.Action("", "Accounts")';
        currentDate = '@DateTime.Now';
        dateTimeFormat = '@ConfigHelper.JsDateFormat' + ' ' + '@ConfigHelper.TimeFormat';
        cashAccountList = JSON.parse('@Html.Raw(ViewBag.CashAccountList)');
        bankAccountList = JSON.parse('@Html.Raw(ViewBag.BankAccountList)');
    });
</script>
<script src="~/areas/finance/views/accounts/adviceAcknowledgement.js"></script>
<div id="dvWizard">
    <div class="panel-body">
        @using (Html.BeginForm("AdviceAcknowledgement", "Accounts", FormMethod.Post, new { @class = "j-forms j-multistep", @id = "j-forms" }))
        {
            @Html.AntiForgeryToken()
            <div class="tab-content">
                <div class="tab-pane">
                    <div class="row">
                        <div class="col-sm-4">
                            @Html.Label("Advice Date", new { @class = "label" })
                            <div class="clearfix">
                                <div id="drAdviceDate"></div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.AdviceNo, new { @class = "label" })
                                <div class="input">
                                    @Html.TextBoxFor(model => model.AdviceNo, new { @class = "form-control", @id = "txtAdviceNo" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane">
                    <div class="row">
                        <div class="col-sm-12">
                            <div>
                                <table id="dtAdviceList"></table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
