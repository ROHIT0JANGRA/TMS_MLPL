@model IEnumerable<CodeLock.Models.MasterAccount>
@{
    ViewBag.Title = "Account List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="widget-wrap material-table-widget">
    <table id="dtAccount">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AccountCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccountDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PartyTypeId)
                </th>
                <th data-hide="phone">
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th class="td-center" data-sort-ignore="true" data-hide="phone">Action</th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model.MainCategoryId)
                </th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model.AccountGroupId)
                </th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model.AccountCategoryId)
                </th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model.CompanyId)
                </th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model.EntryByName)
                </th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model.EntryDate)
                </th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model.UpdateByName)
                </th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model.UpdateDate)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PartyAccount)
                    </td>
                    <td>
                        @Html.Label("", item.IsActive == true ? "Yes" : "No", new { @class = item.IsActive == true ? "label label-success" : "label label-default" })
                    </td>
                    <td class="td-center">
                        <div class="btn-toolbar" role="toolbar">
                            <div class="btn-group" role="group">
                                <a class="btn btn-default btn-sm m-user-edit" href="@Url.Action("Update", new { id = item.AccountId })"><span class="zmdi zmdi-edit"></span></a>
                                <a class="btn btn-default btn-sm m-user-edit" href="@Url.Action("View", new { id = item.AccountId })"><span class="fa fa-file"></span></a>
                            </div>
                        </div>
                    </td>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.MainCategoryName)
                    </td>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.GroupCode)
                    </td>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.CompanyName)
                    </td>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.EntryByName)
                    </td>
                    <td style="display:none">
                        @item.EntryDate.ToDisplayDateTime()
                    </td>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.UpdateByName)
                    </td>
                    <td style="display:none">
                       @item.UpdateDate.ToDisplayDateTime()
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        SetPageLoad('Account', 'List', 'filter', 'Add New', '@Url.Action("Insert")');
        LoadDataTable('dtAccount', true, true, true);
    });
</script>