@using CodeLock.Models
@model  Pfm
@{
    ViewBag.Title = "Acknowledge";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    var baseUrl = '@Url.Action("")';
    loginLocationId = '@SessionUtility.LoginLocationId';
    loginCompanyId = '@SessionUtility.CompanyId';
    docketNomenclature = '@SessionUtility.DocketNomenClature';
</script>
<script src="~/areas/operation/views/pfm/acknowledge.js"></script>

<div class="row" id="dvWizard">
    <div class="panel-body">
        @using (Html.BeginForm("Acknowledge", "Pfm", FormMethod.Post, new { @class = "j-forms", @id = "j-forms" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.PfmId, new { @id = "hdnPfmId" })
            <div class="tab-content">
                <div class="tab-pane">
                    <div class="row">
                        <div class="col-sm-4">
                            <div>
                                @Html.Label("PFM Date", new { @class = "label" })
                            </div>
                            <div id="drPfmDate"></div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.Label("txtPfmNo", "PFM No", new { @class = "label" })
                                <div class="input">
                                    @Html.TextBox("txtPfmNo", "", new { @class = "form-control", @id = "txtPfmNo" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane">
                    <div class="row">
                        <table id="dtPfmDetails"></table>
                    </div>
                </div>
                <div class="tab-pane">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.PfmNo, new { @class = "label" })
                                <div class="clearfix">
                                    @Html.Label(" ", new { @id = "lblPfmNo", @class = "label-bold" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.PfmDateTime, new { @class = "label" })
                                <div class="clearfix">
                                    @Html.Label(" ", new { @id = "lblPfmDate", @class = "label-bold" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ManualPfmNo, new { @class = "label" })
                                <div class="clearfix">
                                    @Html.Label(" ", new { @id = "lblManualPfmNo", @class = "label-bold" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ForwardType, new { @class = "label" })
                                <div class="clearfix">
                                    @Html.Label(" ", new { @id = "lblForwardType", @class = "label-bold" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ForwardFrom, new { @class = "label" })
                                <div class="clearfix">
                                    @Html.Label(" ", new { @id = "lblForwardFrom", @class = "label-bold" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ForwardTo, new { @class = "label" })
                                <div class="clearfix">
                                    @Html.Label(" ", new { @id = "lblForwardTo", @class = "label-bold" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.CourierName, new { @class = "label" })
                                <div class="clearfix">
                                    @Html.Label(" ", new { @id = "lblCourierName", @class = "label-bold" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.WayBillNo, new { @class = "label" })
                                <div class="clearfix">
                                    @Html.Label(" ", new { @id = "lblWayBillNo", @class = "label-bold" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.WayBillDate, new { @class = "label" })
                                <div class="clearfix">
                                    @Html.Label(" ", new { @id = "lblWayBillDate", @class = "label-bold" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.Partial("DateTimePicker", new DateTimePicker() { FieldName = "AcknowledgeDate", FieldCaption = DataAnnotationHelper.GetDisplayName(Model, m => m.AcknowledgeDate), IsRequired = true, AllowFutureDate = false, AllowPastDate = true })
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ReceivedBy, new { @class = "label" })
                                <div class="input">
                                    @Html.TextBoxFor(model => model.ReceivedBy, new { @class = "form-control" })
                                </div>
                                @Html.ValidationMessageFor(model => model.ReceivedBy)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <table id="dtDocketDetails"></table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
