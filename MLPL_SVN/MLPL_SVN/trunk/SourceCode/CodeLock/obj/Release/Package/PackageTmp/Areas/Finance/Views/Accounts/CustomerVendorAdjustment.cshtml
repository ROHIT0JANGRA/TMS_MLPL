@using CodeLock.Models
@model CustomerVendorAdjustment
@using Secure_Coding.MvcSecurityExtensions;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        vendorMasterUrl = '@Url.Action("", "Vendor", new { Area = "Master" })';
        baseUrl = '@Url.Action("", "Accounts")';
        locationId = '@SessionUtility.LoginLocationId';
    });
</script>
<script src="~/Areas/Finance/Views/Accounts/CustomerVendorAdjustment.js?version=@DateTime.Now.Ticks"></script>

<div id="dvWizard">
    <div class="panel-body">
        @using (Html.BeginForm("CustomerVendorAdjustment", "Accounts", FormMethod.Post, new { @class = "j-forms", @id = "j-forms" }))
        {
            @Html.AntiForgeryToken()
            <div class="tab-content">
                <div class="tab-pane">
                    <div class="row">
                        <div class="col-sm-3">
                            @Html.Label("Select Date", new { @class = "label" })
                            <div class="clearfix">
                                <div id="drTransactionDate"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.CustomerCode, new { @class = "label" })
                                <div class="input">
                                    @Html.HiddenFor(model => model.CustomerId, new { @id = "hdnCustomerId" })
                                    @Html.TextBoxFor(model => model.CustomerCode, null, new { @class = "form-control", @id = "txtCustomerCode" })
                                </div>
                                @Html.ValidationMessageFor(model => model.CustomerCode)
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.CustomerName, " ", new { @class = "label" })
                                <div class="clearfix">
                                </div>
                                @Html.LabelFor(model => model.CustomerName, " ", new { @class = "label-bold", @id = "lblCustomerName" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.VendorCode, new { @class = "label" })
                                <div class="input">
                                    @Html.HiddenFor(model => model.VendorId, new { @id = "hdnVendorId" })
                                    @Html.TextBoxFor(model => model.VendorCode, null, new { @class = "form-control", @id = "txtVendorCode" })
                                </div>
                                @Html.ValidationMessageFor(model => model.VendorCode)
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.VendorCode, " ", new { @class = "label" })
                                <div class="clearfix">
                                </div>
                                @Html.LabelFor(model => model.VendorCode, " ", new { @class = "label-bold", @id = "lblVendorName" })
                            </div>
                        </div>
                    </div>
                    <div class="page-separator">OR</div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.BillNo, new { @class = "label" })
                                <div class="input">
                                    @Html.TextBoxFor(model => model.BillNo, new { @class = "form-control", @id = "txtBillNo" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-group">
                                    @Html.Label(" ", new { @class = "label" })
                                    <div class="clearfix">
                                        @Html.Label("(seperated by comma if multiple)", new { @class = "label" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="page-separator">OR</div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ManualBillNo, new { @class = "label" })
                                <div class="input">
                                    @Html.TextBox("ManualBillNo", " ", new { @class = "form-control", @id = "txtManualBillNo" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-group">
                                    @Html.Label(" ", new { @class = "label" })
                                    <div class="clearfix">
                                        @Html.Label("(seperated by comma if multiple)", new { @class = "label" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane">
                    <div class="page-separator">Customer Bill List</div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div>
                                <table id="dtCustomerBillList"></table>
                            </div>
                        </div>
                    </div>
                    <div class="page-separator">Vendor Bill List</div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div>
                                <table id="dtVendorBillList"></table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.Partial("DateTimePicker", new DateTimePicker() { FieldName = "AdjustmentDateTime", FieldCaption = DataAnnotationHelper.GetDisplayName(Model, m => m.AdjustmentDateTime), IsDateOnly = false, IsRequired = true, AllowFutureDate = false, AllowPastDate = true })
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-sm-6">
                            <div class="page-separator">Customer Bill List</div>
                            <div>
                                <table id="dtCustomerBillDetail">
                                    <tfoot>
                                        <tr>
                                            <th colspan="5">
                                                Total
                                            </th>
                                            <th>
                                                @Html.TextBoxFor(model => model.TotalCustomerAdjustmentAmount, "0", new { @class = "textlabel numeric", id = "txtTotalCustomerAdjustmentAmount" })
                                            </th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="page-separator">Vendor Bill List</div>
                            <div>
                                <table id="dtVendorBillDetail">
                                    <tfoot>
                                        <tr>
                                            <th colspan="5">
                                                Total
                                            </th>
                                            <th>
                                                @Html.TextBoxFor(model => model.TotalVendorAdjustmentAmount, "0", new { @class = "textlabel numeric", id = "txtTotalVendorAdjustmentAmount" })
                                            </th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


