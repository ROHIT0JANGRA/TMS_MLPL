    //    return ShowReport(reportInfo);
    //}
    function PaymentView() {
        var prmList = [{ Name: "BillId", Value: GetUrlValue()["PaymentId"] }];
        var reportInfo = { PrmList: prmList, Name: 'AdvanceVehicleHireSlip', Description: 'Advance Vehicle Hire Slip' };
        return ShowReport(reportInfo);
    }
</script>


