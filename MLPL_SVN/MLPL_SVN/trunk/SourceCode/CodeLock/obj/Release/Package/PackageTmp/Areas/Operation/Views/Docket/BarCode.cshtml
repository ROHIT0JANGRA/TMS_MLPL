@model CodeLock.Models.BarCodeModel
@using Secure_Coding.MvcSecurityExtensions;
@{
    ViewBag.Title = "BarCode";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("BarCode", "Docket", FormMethod.Post, new { @class = "j-forms" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("barcodeId", 0)
    <div class="widget-wrap">

        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.BarCode, new { @class = "label" })
                    <div class="input">
                        @Html.TextBoxFor(model => model.BarCode, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.BarCode)
                </div>
            </div>
        </div>

        <div class="form-footer">
            <button type="submit" class="btn btn-success primary-btn" tabindex="0">Create Bar Code </button>
        </div>
    </div>
}
<script>
    $(document).ready(function () {
        SetPageLoad('Docket', 'BarCode', '', 'Generate Bar Code', '@Url.Action("BarCode")');
    });

</script>

