@model IEnumerable<CodeLock.Models.MasterProductTemperature>

@{
    ViewBag.Title = "Product Temperature List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="widget-wrap material-table-widget">
    <table id="dtProduct">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MinimumTemperature)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaximumTemperature)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StandardTemperature)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MinimumHumidity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaximumHumidity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StandardHumidity)
                </th>
                <th data-hide="phone">
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th class="td-center" data-sort-ignore="true" data-hide="phone">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MinimumTemperature)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaximumTemperature)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StandardTemperature)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MinimumHumidity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaximumHumidity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StandardHumidity)
                    </td>
                    <td>
                        @Html.Label("", item.IsActive == true ? "Yes" : "No", new { @class = item.IsActive == true ? "label label-success" : "label label-default" })
                    </td>
                    <td class="td-center">
                        <div class="btn-toolbar" role="toolbar">
                            <div class="btn-group" role="group">
                                <a class="btn btn-default btn-sm m-user-edit" href="@Url.Action("Insert", new { id = item.ProductId })"><span class="zmdi zmdi-edit"></span></a>
                                <a class="btn btn-default btn-sm m-user-edit" href="@Url.Action("View", new { id = item.ProductId })"><span class="fa fa-file"></span></a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        SetPageLoad('Product Temperature', 'List', 'filter', 'Add New', '@Url.Action("Insert")');
        LoadDataTable('dtProduct', true, true, true);
    });
</script>