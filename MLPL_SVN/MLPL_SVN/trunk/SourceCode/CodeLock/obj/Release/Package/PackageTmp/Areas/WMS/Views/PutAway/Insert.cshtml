@using CodeLock.Models
@model PutAway
@using Secure_Coding.MvcSecurityExtensions;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    grnUrl = '@Url.Action("","Grn")';
    companyId = '@SessionUtility.CompanyId';
    warehouseId = '@SessionUtility.WarehouseId';
</script>
<script src="~/Areas/WMS/Views/PutAway/Insert.js"></script>

<div id="dvWizard">
    <div class="panel-body">
        @using (Html.BeginForm("Insert", "PutAway", FormMethod.Post, new { @class = "j-forms", @id = "j-forms" }))
        {

            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.PutAwayId)
            <div class="tab-content">
                <div class="tab-pane">
                    <div class="row">
                        <div class="col-sm-4">
                            @Html.Label("GRN Date", new { @class = "label" })
                            <div id="drGrnDate"></div>
                        </div>
                    </div>
                    <div class="page-separator">OR</div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            @Html.Label("GrnNo", "GRN No", new { @class = "label" })
                            <div class="input">
                                @Html.TextBox("txtGrnNo", "", new { @class = "form-control", @id = "txtGrnNo" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane">
                    <div class="row" id="dvGrnCriteriaList">
                        <div class="col-sm-12">
                            <div>
                                <table id="dtGrnList"></table>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <div class="input">
                                    @Html.HiddenFor(model => model.GrnCriteriaCount, new { @id = "hdnGrnCount", @value = 0 })
                                </div>
                                @Html.ValidationMessageFor(model => model.GrnCriteriaCount)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.PutAwayNo, new { @class = "label" })
                                <div class="system-label">
                                    @Html.LabelFor(model => model.PutAwayNo, "<System Generated>")
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.Partial("DateTimePicker", new DateTimePicker() { DefaultDate = Model.PutAwayDateTime.ConvertToDateTime(), FieldName = "PutAwayDateTime", FieldCaption = DataAnnotationHelper.GetDisplayName(Model, m => m.PutAwayDateTime), IsDateOnly = false, IsRequired = true, AllowFutureDate = false, AllowPastDate = false, MinDate = DateTime.Now.Date, MaxDate = DateTime.Now.Date.AddDays(1) })
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.LabourName, new { @class = "label", @id = "lblLabourName" })
                                <div class="input">
                                    @Html.HiddenFor(model => model.LabourId, new { @id = "hdnLabourId" })
                                    @Html.TextBoxFor(model => model.LabourName, null, new { @class = "form-control", @id = "txtLabourName" })
                                </div>
                                @Html.ValidationMessageFor(model => model.LabourName)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div>
                                <table id="dtProduct"></table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

