@model CodeLock.Models.StandardChargeMatrixUpload
@{
    /**/

    ViewBag.Title = "Standard Charge Matrix Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("StandardChargeMatrixUpload", "CustomerContract", FormMethod.Post, new { @class = "j-forms", enctype = "multipart/form-data" }))
{
    <div class="widget-wrap">
        <div class="row">
