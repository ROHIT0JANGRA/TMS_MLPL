                </div>
            </div>*@
        <div class="form-footer">
            <button type="submit" class="btn btn-success primary-btn" tabindex="3" id="btnSubmit">Upload</button>
        </div>
        <div id="dvResult">
            <table id="dtResult">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Details.FirstOrDefault().UploadStatus)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Details.FirstOrDefault().ContractNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Details.FirstOrDefault().ChargeCodeType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Details.FirstOrDefault().IsBooking)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Details.FirstOrDefault().From)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Details.FirstOrDefault().To)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Details.FirstOrDefault().Matrix)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Details.FirstOrDefault().TransportMode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Details.FirstOrDefault().FtlType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Details.FirstOrDefault().Rate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Details.FirstOrDefault().RateTypeDescription)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Details.FirstOrDefault().ConsignorName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Details.FirstOrDefault().ConsigneeName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Details.FirstOrDefault().TransitDays)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Details.FirstOrDefault().BillLocation)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Details.FirstOrDefault().BillingCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Details.FirstOrDefault().PartNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Details.FirstOrDefault().PackagingType)
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @*@foreach (var item in Model.Details)*@
                    @for (int i = 0; i < Model.Details.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(model => model.Details[i].UploadStatus)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Details[i].ContractNo)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Details[i].ChargeCodeType)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Details[i].IsBooking)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Details[i].From)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Details[i].To)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Details[i].Matrix)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Details[i].TransportMode)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Details[i].FtlType)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Details[i].Rate)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Details[i].RateTypeDescription)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Details[i].ConsignorName)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Details[i].ConsigneeName)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Details[i].TransitDays)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Details[i].BillLocation)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Details[i].BillingCode)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Details[i].PartNo)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Details[i].PackagingType)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
<script>
    $(document).ready(function () {
        SetPageLoad('Customer Contract', 'Standard Charge Matrix Upload', 'File');
        var msg = '@Model.ErrorMessage';
        if (msg != '')
            ShowMessage(msg);

        $('#dvResult').showHide(parseInt('@Model.Details.Count') > 0);
        LoadDataTable('dtResult', true, false, false);
    });

    function DownloadFormat() {
        window.location = '@Href("~/Areas/Contract/Views/CustomerContract/Standard_Charge_Matrix_Upload_Format.xlsx")';
    }
</script>
