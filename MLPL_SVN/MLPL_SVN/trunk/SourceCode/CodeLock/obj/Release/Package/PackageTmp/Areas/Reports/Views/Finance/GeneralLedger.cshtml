<script>
    var selectedReportType = "1", selectedSubLedger = "2";
    var ddlCompanyId, rdGenLedger, rdSubLedger, rdDocument, hdnAccountId, txtAccountCode, txtCode, rdIndividual, rdCumulative, ddlLocationId, ddlAccountCategoryId, rdIsNormal, drDate, btnSubmit, lblCode;
    var dvSubLedger, dvDocument, dvIsIndividual, dvAccount, dvLocation;
    $(document).ready(function () {
        SetPageLoad('Finance Report', 'General Ledger', '', '', '');
        locationId = '@SessionUtility.LoginLocationId';
        InitObjects();
        AttachEvents();
    });

    function InitObjects() {
        drDate = InitDateRange('drDate', DateRange.LastWeek,false);
        ddlCompanyId = $('#ddlCompanyId');
        rdGenLedger = $('#rdGenLedger');
        rdSubLedger = $('#rdSubLedger');
        rdDocument = $('#rdDocument');
		ddlAccountCode = $('#ddlAccountCode');
        rdIndividual = $('#rdIndividual');
        rdCumulative = $('#rdCumulative');
        ddlLocationId = $('#ddlLocationId');
        ddlAccountCategoryId = $('#ddlAccountCategoryId');
        rdIsNormal = $('#rdIsNormal');
        dvSubLedger = $('#dvSubLedger');
        dvIsIndividual = $('#dvIsIndividual');
        dvDocument = $('#dvDocument');
        dvAccount = $('#dvAccount');
        dvLocation = $('#dvLocation');
        lblCode = $('#lblCode');
        txtCode = $('#txtCode');
        hdnCodeId = $('#hdnCodeId');
        lblCodeName = $('#lblCodeName');
        lblAccountName = $('#lblAccountName');
        customerMasterUrl = '@Url.Action("", "Customer", new { Area = "Master" })';
        $('#ddlAccountCategoryId option').eq(0).before($('<option>', { value: '0', text: 'All' }));
        ddlAccountCategoryId.val('0');
        rdIndividual = $('#rdIndividual');
        rdCumulative = $('#rdCumulative');
        locationUrl = '@Url.Action("", "Location", new { Area = "Master" })';
        accountList = JSON.parse('@Html.Raw(ViewBag.AccountList)');

    }

    function AttachEvents() {
        BindDropDownList('ddlAccountCode', accountList, 'Value', 'Name', '', 'All Accounts');
		InitMultiSelect(ddlAccountCode.Id, false, false, true, true);
        $('[id*="rdReportType"]').each(function () { $(this).click(function () { selectedReportType = $(this).val(); OnReportTypeChange(); }); });
        $('[id*="rdSubLedger"]').each(function () { $(this).click(function () { selectedSubLedger = $(this).val(); OnSubLedgerChange(); }); });
        CustomerAutoComplete('txtCode', 'hdnCodeId');
        txtCode.blur(function () { return CheckIsValid(txtCode, hdnCodeId, lblCodeName); });
        OnReportTypeChange();
        OnIsIndividualChange();
        rdIndividual.change(OnIsIndividualChange);
        rdCumulative.change(OnIsIndividualChange);
        btnSubmit = $('#btnSubmit');
        btnSubmit.click(ViewReport);
    }

    function OnReportTypeChange() {
        switch (selectedReportType) {
            case "1":
                dvAccount.show();
                dvSubLedger.hide();
                dvDocument.hide();
                dvIsIndividual.show();
                dvLocation.show();
                break;
            case "2":
                dvAccount.show();
                dvSubLedger.show();
                dvDocument.hide();
                dvIsIndividual.hide();
                dvLocation.show();
                break;
            case "10":
                dvAccount.hide();
                dvSubLedger.hide();
                dvDocument.show();
                dvIsIndividual.hide();
                dvLocation.hide();
                break;
        }
    }

    function OnSubLedgerChange() {
        txtCode.val('');
        lblCodeName.text('');
        switch (selectedSubLedger) {
            case "2":
                lblCode.text("Customer");
                CustomerAutoComplete('txtCode', 'hdnCodeId');
                break;
            case "3":
                lblCode.text("Vendor");
                VendorAutoComplete('txtCode', 'hdnCodeId');
                break;
            case "1":
                lblCode.text("Employee");
                UserAutoComplete('txtCode', 'hdnCodeId');
                break;
            case "5":
                lblCode.text("Driver");
                DriverCodeAutoCompleteByLocation('txtCode', 'hdnCodeId');
                break;
            case "6":
                lblCode.text("Vehicle No");
                VehicleAutoComplete('txtCode', 'hdnCodeId');
                break;
        }
    }

    function CheckIsValid(objName, objHdnId, objLabel) {
        switch (selectedSubLedger) {
            case "2":
                IsCustomerCodeExist(objName, objHdnId, objLabel);
                break;
            case "3":
                IsVendorCodeExist(objName, objHdnId, objLabel);
                break;
            case "1":
                IsUserNameExist(objName, objHdnId);
                break;
            case "5":
                IsDriverCodeExistByLocation(objName, objHdnId, objLabel);
                break;
            case "6":
                IsVehicleNoExist(objName, objHdnId);
                break;
        }
    }

    function CheckValidCustomerCode(txtCustomerCode, hdnCustomerId) {
        if (txtCustomerCode.val() != "") {
            var requestData = { customerCode: txtCustomerCode.val() };
            AjaxRequestWithPostAndJson(customerMasterUrl + '/CheckValidCustomerCodeByCompanyId', JSON.stringify(requestData), function (result) {
                if (result.Value > 0) {
                    hdnCustomerId.val(result.Value);
                    txtCustomerCode.val(result.Name + ' : ' + result.Description);
                }
                else {
                    ShowMessage('Customer is not exist');
                    txtCustomerCode.val('');
                    hdnCustomerId.val('');
                    txtCustomerCode.focus();
                }
            }, ErrorFunction, false);
        }
    }

    function OnIsIndividualChange() {
        var requestData = { isRegion: rdIndividual.IsChecked }
        AjaxRequestWithPostAndJson(locationUrl + '/GetLocationByHierarchyId', JSON.stringify(requestData), function (responseData) {
            BindDropDownList('ddlLocationId', responseData, 'Value', 'Name', '', 'Select Location');
        }, ErrorFunction, false);
    }

    function ViewReport() {
        var prmList = [{ Name: "FromDate", Value: $.displayDate(drDate.startDate) },
            { Name: "ToDate", Value: $.displayDate(drDate.endDate) },
            { Name: "FinYear", Value: '@SessionUtility.FinYear' },
            { Name: "CalYear", Value: '@SessionUtility.CalenderYear' },
            { Name: "IsCumulative", Value: rdCumulative.IsChecked },
			{ Name: "Accounts", Value: ddlAccountCode.multiVal() == 'All' ? 0 : ddlAccountCode.multiVal() },
            { Name: "Groups", Value: 0 },
            { Name: "Category", Value: ddlAccountCategoryId.val() == '0' ? 'All' : ddlAccountCategoryId.val() },
            { Name: "CostCenter", Value: txtCode.val() == '' ? 'All' : txtCode.val().split(':')[0].trim() },
            { Name: "LocationId", Value: ddlLocationId.val() },
            { Name: "ReportType", Value: selectedReportType == 2 ? parseInt(selectedSubLedger) : selectedReportType == 1 ? 0 : 10 },
            { Name: "ReportSubType", Value: 'All' },
            { Name: "DataType", Value: 'All' },
            { Name: "IsInclusive", Value: true },
            { Name: "DocumentNos", Value: $('#txtDocumentNo').val() == '' ? 'All' : $('#txtDocumentNo').val() },
            { Name: "DataSubType", Value: rdIsNormal.IsChecked ? '1' : '2' },
            { Name: "ChequeNo", Value: $('#txtChequeNo').val() == '' ? 'All' : $('#txtChequeNo').val() },
            { Name: "Company", Value: '@SessionUtility.CompanyId' }];

       /* alert(prmList[0].Value);
        alert(prmList[1].Value);
        alert(prmList[2].Value);
        alert(prmList[3].Value);
        alert(prmList[4].Value);
        alert(prmList[5].Value);
        alert(prmList[6].Value);
        alert(prmList[7].Value);
        alert(prmList[8].Value);
        alert(prmList[9].Value);
        alert(prmList[10].Value);
        alert(prmList[11].Value);
        alert(prmList[12].Value);
        alert(prmList[13].Value);
        alert(prmList[14].Value);
        alert(prmList[15].Value);
        alert(prmList[16].Value);
        alert(prmList[17].Value);*/

        var reportInfo = { PrmList: prmList, Name: 'GeneralLedgerRegister', Description: 'General Ledger' };

        return ShowReport(reportInfo);
    }

</script>
