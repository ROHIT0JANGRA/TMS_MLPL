@using CodeLock.Models
@model PutAway
@using Secure_Coding.MvcSecurityExtensions;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="dvWizard">
    <div class="panel-body">
        @using (Html.BeginForm("Update", "PutAway", FormMethod.Post, new { @class = "j-forms", @id = "j-forms" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.PutAwayId, new { @id = "hdnPutAwayId" })
            <div class="tab-content">
                <div class="tab-pane">
                    <div class="row">
                        <div class="col-sm-4">
                            @Html.Label("Put Away Date", new { @class = "label" })
                            <div id="drPutAwayDate"></div>
                        </div>
                    </div>
                    <div class="page-separator">OR</div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.Label("GrnNo", "GRN No", new { @class = "label" })
                                <div class="input">
                                    @Html.TextBox("txtGrnNo", "", new { @class = "form-control", @id = "txtGrnNo" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.Label("PutAwayNo", new { @class = "label" })
                                <div class="input">
                                    @Html.TextBox("txtPutAwayNo", "", new { @class = "form-control", @id = "txtPutAwayNoHdr" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane">
                    <div class="row">
                        <div class="col-sm-12">
                            <div>
                                <table id="dtPutAwayList"></table>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <div class="input">
                                    @Html.HiddenFor(m => m.GrnCriteriaCount, new { @id = "hdnGrnCriteriaCount", @Value = 1 })
                                </div>
                                @Html.ValidationMessageFor(m => m.GrnCriteriaCount)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.LabelFor(m => m.PutAwayNo, new { @class = "label" })
                                <div class="input">
                                    @Html.TextBoxFor(m => m.PutAwayNo, new { @id = "txtPutAwayNo", @Class = "form-control textlabel label-bold" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.Partial("DateTimePicker", new DateTimePicker() { DefaultDate = Model.PutAwayDateTime.ConvertToDateTime(), FieldName = "PutAwayDateTime", FieldCaption = DataAnnotationHelper.GetDisplayName(Model, m => m.PutAwayDateTime), IsRequired = true, AllowFutureDate = false, AllowPastDate = false, MinDate = DateTime.Now.Date, MaxDate = DateTime.Now.Date.AddDays(1) })
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.LabelFor(m => m.LabourName, new { @class = "control-label" })
                                <div class="input">
                                    @Html.TextBoxFor(m => m.LabourName, new { @class = "form-control textlabel label-bold", @id = "txtLabourName" })
                                    @Html.HiddenFor(m => m.LabourId, new { @id = "hdnLabourId" })
                                </div>
                                @Html.ValidationMessageFor(m => m.LabourName)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div>
                                <table id="dtPutAwayDetails"></table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script>
    var drPutAwayDate, baseUrl;
    $(document).ready(function () {
        baseUrl = '@Url.Action("")';
        SetPageLoad('Put Away', 'Update');
        companyId = '@SessionUtility.CompanyId', warehouseId = '@SessionUtility.WarehouseId';
        drPutAwayDate = InitDateRange('drPutAwayDate ', DateRange.LastWeek);

        InitWizard('dvWizard', [
         { StepIndex: 1, StepName: 'Criteria', StepFunction: GetPutAwayListForUpdate },
         { StepIndex: 2, StepName: 'Put Away List', StepFunction: GetPutAwayDetailsForUpdate },
         { StepIndex: 3, StepName: 'Update Put Away', StepFunction: ValidateOnSubmit }
        ], 'Update Put Away');
        $('#hdnGrnCriteriaCount').val(1);
        $('#txtLabourName').blur(function () { return IsLabourNameExist($('#txtLabourName'), $('#hdnLabourId')); });
        LabourAutoComplete('txtLabourName', 'hdnLabourId');
    });
</script>
<script src="~/Areas/WMS/Views/PutAway/Update.js"></script>