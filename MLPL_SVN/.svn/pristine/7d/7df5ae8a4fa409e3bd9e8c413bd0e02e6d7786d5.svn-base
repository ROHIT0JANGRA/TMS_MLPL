@model CodeLock.Models.MasterGeneral
@using Secure_Coding.MvcSecurityExtensions;
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Insert", "General", FormMethod.Post, new { @class = "j-forms" }))
{
    @Html.AntiForgeryToken()
    @Html.AntiModelInjectionFor(m => m.CodeTypeId)
    @Html.AntiModelInjectionFor(m => m.CodeId)
    @Html.HiddenFor(m => m.CodeTypeId)
    @Html.HiddenFor(m => m.CodeId)

    <div class="widget-wrap">
        <div class="row">
            <div class="col-sm-4">

                <div class="form-group">
                    @Html.LabelFor(model => model.CodeDescription, Model.CodeType, new { @class = "label" })
                    <div class="input">
                        @Html.TextBoxFor(model => model.CodeDescription, new { @class = "form-control", @id = "txtCodeDescription" })
                    </div>
                    @Html.ValidationMessageFor(model => model.CodeDescription)
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.IsActive, new { @class = "label" })
                    <label class="checkbox">
                        @*<input type="checkbox">*@
                        @Html.CheckBoxFor(model => model.IsActive)
                        <i></i>
                    </label>
                </div>
            </div>
        </div>
        <div class="form-footer">
            <button type="submit" class="btn btn-success primary-btn" tabindex="3">Create</button>
        </div>
    </div>
}
<script>
    $(document).ready(function () {
        SetPageLoad('General', 'Create', 'txtCodeDescription', 'Goto List', '@Url.Action("List", new { id = Model.CodeTypeId })');
    });
</script>



