@model CodeLock.Models.PutAwayRegister
    @using Secure_Coding.MvcSecurityExtensions;
    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <div id="dvWizard">
        <div class="panel-body">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "j-forms", @id = "j-forms" }))
            {
                @Html.AntiForgeryToken()
                <div class="tab-content">
                    <div class="tab-pane">
                        <div class="row">
                            <div class="col-sm-4">
                                @Html.Label("PutAway Date", new { @class = "label" })
                                <div id="drPutAwayDate"></div>
                            </div>
                        </div>
                        <div class="page-separator">OR</div>
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PutAwayNo, new { @class = "label" })
                                    <div class="input">
                                        @Html.TextBoxFor(model => model.PutAwayNo, new { @class = "form-control", @id = "txtPutAwayNo" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane">
                        <div class="row">
                            <div class="col-sm-12">
                                <div>
                                    <table id="dtPutAwayDetail"></table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script>
        $(document).ready(function () {
            SetPageLoad('PutAway', 'Register', '');
            drPutAwayDate = InitDateRange('drPutAwayDate', DateRange.LastWeek);
            txtPutAwayNo = $('#txtPutAwayNo');
            InitWizard('dvWizard', [
           { StepName: 'Criteria', StepFunction: GetPutAwayList },
           { StepName: 'Document List' }
            ], '');

            dtPutAwayDetail = LoadDataTable('dtPutAwayDetail', true, true, true, null, null, [],
                    [
                        { title: 'PutAway No', data: "PutAwayNo" },
                        { title: 'PutAway Date Time', data: "PutAwayDateTime" },
                        { title: 'Labour', data: "LabourName" },
                        { title: 'GRN No', data: "GrnNo" },
                        { title: 'Product', data: "ProductCode" },
                        { title: 'GRN Quantity', data: "GrnQuantity" },
                        { title: 'Quantity', data: "Quantity" },
                        { title: 'Location', data: "BinName" },
                        { title: 'Location Quantity', data: "LocationQuantity" }
                    ]);
        });

        function GetPutAwayList() {
            var requestData = { putAwayNo: txtPutAwayNo.val(), fromDate: drPutAwayDate.startDate, toDate: drPutAwayDate.endDate };
            AjaxRequestWithPostAndJson('@Url.Action("GetRegisterPutAwayDetail")', JSON.stringify(requestData), OnPutAwayDetailsSuccess, ErrorFunction, false);
            return false;
        }

        function OnPutAwayDetailsSuccess(responseData) {
            dtPutAwayDetail.fnClearTable()
            if (responseData.length == 0) {
                isStepValid = false;
                ShowMessage('No Record Found');
                return false;
            }
            else {
                if (responseData.length > 0) {
                    $.each(responseData, function (i, item) {
                        item.PutAwayDateTime = $.displayDateTime(item.PutAwayDateTime);
                        if (item.LocationQuantity == 0)
                            item.LocationQuantity = '<input type="text" value=' + 0.000 + ' class="form-control textlabel numeric2"/>';
                        else
                            item.LocationQuantity = '<input type="text" value=' + item.LocationQuantity.toFixed(3) + ' class="form-control textlabel numeric2"/>';
                        item.Quantity = '<input type="text" value=' + item.Quantity.toFixed(3) + ' class="form-control textlabel numeric2" />';
                        item.GrnQuantity = '<input type="text" value=' + item.GrnQuantity.toFixed(3) + ' class="form-control textlabel numeric2"/>';
                        if (item.BinName == null)
                            item.BinName = 'NA';
                    });
                    dtPutAwayDetail.dtAddData(responseData);
                }
            }
        }
    </script>
